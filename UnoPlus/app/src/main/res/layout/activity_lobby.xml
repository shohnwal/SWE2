<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@drawable/background_2"
    tools:context=".Lobby">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    Spiel starten    "
        android:id="@+id/button_start"
        android:layout_below="@+id/imageView2"
        android:layout_toRightOf="@+id/imageButton_about"
        android:layout_toEndOf="@+id/imageButton_about" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    Spiel beitreten    "
        android:id="@+id/button_join"
        android:layout_below="@+id/imageView2"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton_about"
        android:background="@drawable/about"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_volumeOn"
        android:background="@drawable/imagebuttonvolume_xml"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/aau_logo"
        android:layout_alignBottom="@+id/imageButton_volumeOn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:background="@drawable/uno_logo"
        android:layout_below="@+id/imageButton_volumeOn"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView" />

</RelativeLayout>